# ============================================
# KATZE BACKEND - CONFIGURACIÓN DE ENTORNO
# ============================================

# Puerto del servidor
PORT=5000

# Base de datos PostgreSQL LOCAL
DB_USER=postgres
DB_PASSWORD=tu_contraseña_aqui
DB_HOST=localhost
DB_PORT=5432
DB_NAME=katze

# Base de datos PostgreSQL EN RENDER (Producción) - Comentar en desarrollo
# DB_USER=tu_render_user
# DB_HOST=tu_render_host.render.com
# DB_NAME=tu_render_db
# DB_PASSWORD=tu_render_password
# DB_PORT=5432

# JWT Secret - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# Gemini API Key
# Obtén tu API Key en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=tu_gemini_api_key_aqui

# Firebase Admin SDK Credentials (desarrollo local)
# Apunta al archivo serviceAccountKey.json en la carpeta config
GOOGLE_APPLICATION_CREDENTIALS=./config/serviceAccountKey.json

# Firebase Service Account (para Render/Producción)
# En desarrollo, deja esto vacío y usa el archivo serviceAccountKey.json
# En producción (Render), pega aquí el JSON completo del service account
FIREBASE_SERVICE_ACCOUNT=

# Firebase Project ID
FIREBASE_PROJECT_ID=tu_project_id_aqui

# DATABASE_URL (para producción en Render)
# DATABASE_URL=postgresql://user:password@host/database
